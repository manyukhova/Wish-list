
<h1>Wish List</h1>
<div class="box">

  <% newListItems.forEach(function(item) { %>
      <form action="/delete" method="POST">
          <div class="item">
              <div class="item">
                <button type="checkbox" name="checkbox" value="<%=item.id %>" onchange="this.form.submit()">-</button>
                  <p> <%= item.name %> </p>
              </div>
          </div>
      </form>            
  <%  }) %>


  <form class="item" action="/" method="POST">
      <input type="text" name="newItem" placeholder="Add Wish" autocomplete="off">
      <button type="submit" name="list" value="<%= listTitle %>">Add</button>
  </form>

</div>
